<Window x:Class="opros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:opros"
        mc:Ignorable="d"
        Title="НаДо" Height="450" Width="150" WindowStyle="ToolWindow" ResizeMode="NoResize" MouseLeftButtonUp="Window_MouseLeftButtonUp" KeyDown="Window_KeyDown">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFFFF6DB"/>
            <GradientStop Color="#FFCECECE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        
        <Border Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="100" Height="352">
            <Border Width="98" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF656565" Offset="0.007"/>
                        <GradientStop Color="#FFFFFEE3" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Border>

        <Border Name="CrBord" Width="90" Height="35" Background="#FFCECECE" VerticalAlignment="Top" Margin="15,15,0,0" HorizontalAlignment="Left" MouseEnter="CrBord_MouseEnter" MouseLeave="CrBord_MouseLeave" MouseLeftButtonDown="CrBord_MouseLeftButtonDown">
            <TextBlock Name="CrText" Text="Создать" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" TextAlignment="Center" VerticalAlignment="Center" Foreground="#FF464646" IsHitTestVisible="False"/>
        </Border>

        <Border Name="RedBord" Width="90" Height="35" Background="#FFCECECE" VerticalAlignment="Top" Margin="15,55,0,0" HorizontalAlignment="Left" MouseEnter="RedBord_MouseEnter" MouseLeave="RedBord_MouseLeave" MouseLeftButtonDown="RedBord_MouseLeftButtonDown">
            <TextBlock Name="RedText" Text="Редактировать" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" TextAlignment="Center" VerticalAlignment="Center" Foreground="#FF464646" IsHitTestVisible="False"/>
        </Border>

        <Border Name="SeeBord" Width="90" Height="35" Background="#FFCECECE" VerticalAlignment="Top" Margin="15,95,0,0" HorizontalAlignment="Left" MouseEnter="SeeBord_MouseEnter" MouseLeave="SeeBord_MouseLeave" MouseLeftButtonDown="SeeBord_MouseLeftButtonDown">
            <TextBlock Name="SeeText" Text="Просмотреть" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" TextAlignment="Center" VerticalAlignment="Center" Foreground="#FF464646" IsHitTestVisible="False"/>
        </Border>

        <Border Name="ImprBord" Width="90" Height="35" Background="#FFCECECE" VerticalAlignment="Top" Margin="15,135,0,0" HorizontalAlignment="Left" MouseEnter="ImprBord_MouseEnter" MouseLeave="ImprBord_MouseLeave" MouseLeftButtonDown="ImprBord_MouseLeftButtonDown" >
            <TextBlock Name="ImprText" Text="Экспорт и импорт" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14" TextAlignment="Center" VerticalAlignment="Center" Foreground="#FF464646" IsHitTestVisible="False" TextWrapping="Wrap"/>
        </Border>

        <Border Background="Gray" Height="150" Width="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,90,0,0"/>
        <Border Name ="Polzunok"  Background="LightGray" Height="10" Width="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="13.5,230,0,0" MouseLeftButtonDown="Polzunok_MouseLeftButtonDown"/>

        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" Margin="140,0,0,0">

            <Grid>
                <Border Name="BRLine" Height="2" VerticalAlignment="Center" Margin="0,250,0,0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FF2B00FF" Offset="1"/>
                            <GradientStop Color="Red" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border Name="RBLine" Height="2" VerticalAlignment="Center" Margin="0,-250,0,0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FF2B00FF"/>
                            <GradientStop Color="Red" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <StackPanel x:Name="CrGrid" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,-500,0,0" Opacity="0">
                    <Grid >

                        <TextBlock Text="Тема опроса:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,25,0,0" FontFamily="Cascadia Code ExtraLight" FontSize="22"/>

                        <TextBox x:Name="Opros" Background="White" Height="26" Margin="25,62,0,0" FontFamily="Cascadia Code ExtraLight" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="Black"/>

                        <TextBlock Text="Тип опроса:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,100,0,0" FontFamily="Cascadia Code ExtraLight" FontSize="22"/>

                        <Border x:Name="ChoosePanel" Background="Black" Height="25" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,140,0,0">
                            <StackPanel x:Name="CP" Background="White" Height="23" Width="248">
                                <Border x:Name="Ch1" Background="White" Margin="0,26,0,0" MouseLeftButtonDown="Ch1_MouseLeftButtonDown">
                                    <TextBlock x:Name="ChT1" Text="С неопределением" FontFamily="Cascadia Code ExtraLight" FontSize="20"/>
                                </Border>
                                <Border x:Name="Ch2" Background="White" Margin="0,2,0,0" MouseLeftButtonDown="Ch2_MouseLeftButtonDown">
                                    <TextBlock x:Name="ChT2" Text="Свой" FontFamily="Cascadia Code ExtraLight" FontSize="20"/>
                                </Border>
                            </StackPanel>
                        </Border>
                        <Border Height="25" Width="250" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,140,0,0">
                            <StackPanel Name="SPCH" Height="23" Width="248" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock x:Name="IsNow" Text="Обычный (да/нет)" FontFamily="Cascadia Code ExtraLight" FontSize="20" Margin="2,0,0,0" Width="223"/>
                                <Border Background="Black" Width="1" Height="23" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0"/>
                                <Border x:Name="More" Height="23" Width="23" MouseLeftButtonDown="More_MouseLeftButtonDown">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/стрелка.png" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border x:Name="Next" Background="Black" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,250,0,0" MouseLeftButtonDown="Next_MouseLeftButtonDown">
                            <Border Name="NxBG" Background="White" Height="23" Width="98">
                                <TextBlock Text="Далее" FontFamily="Cascadia Code ExtraLight" FontSize="20" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                            </Border>
                        </Border>
                        <Border x:Name="Back" Background="Black" Height="25" Width="100" HorizontalAlignment="Left" Margin="25,300,0,0" Opacity="0" IsHitTestVisible="False" MouseLeftButtonDown="Back_MouseLeftButtonDown" VerticalAlignment="Top">
                            <Border Background="White" Height="23" Width="98">
                                <TextBlock Text="Назад" FontFamily="Cascadia Code ExtraLight" FontSize="20" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                            </Border>
                        </Border>
                        <Border x:Name="Done" Background="Black" Height="25" Width="100" HorizontalAlignment="Left" Margin="25,350,0,0" Opacity="0" IsHitTestVisible="False" MouseLeftButtonDown="Done_MouseLeftButtonDown" VerticalAlignment="Top">
                            <Border x:Name="DnBG" Background="White" Height="23" Width="98">
                                <TextBlock Text="Готово" FontFamily="Cascadia Code ExtraLight" FontSize="20" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                            </Border>
                        </Border>
                    </Grid>

                    <StackPanel x:Name="Phase2" Opacity="0">
                        <TextBlock x:Name="Theme" Text = "Как посрали?" FontFamily="Cascadia Code ExtraLight" FontSize="22" Margin="0,25,0,0"/>
                        <TextBlock Name="Otveti" Text="- Хуёво" FontFamily="Cascadia Code ExtraLight" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,16,0,0"/>
                        <StackPanel Name="Spisok" Margin="0,5000,0,0" Orientation="Horizontal">
                            <TextBox x:Name="Otvet1" Text="Ответ 1" Background="White" Height="26" FontFamily="Cascadia Code ExtraLight" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="Black"/>
                            <Border Name="Plus" Background="Black" Height="25" Width="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" MouseLeftButtonDown="Plus_MouseLeftButtonDown">
                                <Border Name="BG" Background="White" Height="23" Width="23">
                                    <TextBlock Name="TB" Text="+" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Margin="0,0,0,5"/>
                                </Border>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>

                <Grid x:Name="RedGrid" Margin="0,-500,0,0" Opacity="0">
                    <TextBlock x:Name="InfoRed" Text="Имеющийся опросы"  FontFamily="Cascadia Code ExtraLight" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,55,0,0"/>
                    <StackPanel Orientation="Horizontal">
                        <Grid x:Name="TablOpr" Margin="0,100,0,0" VerticalAlignment="Top" Height="300" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Grid.Column="1"/>
                        </Grid>

                        <StackPanel x:Name="RedSpace" Orientation="Horizontal" Opacity="0">

                            <StackPanel x:Name="RedPhase2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0">
                                <TextBox x:Name="RedTheme" Text="Хуй" BorderBrush="Black" Height="28" FontFamily="Cascadia Code ExtraLight" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                                <StackPanel x:Name="SpRedOtvet1" Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBox x:Name="RedOtvet1" Text="Ответ 1" BorderBrush="Black" Height="25" FontFamily="Cascadia Code ExtraLight" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                    <Border Name="RedPlus" Background="Black" Height="25" Width="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" MouseLeftButtonDown="RedPlus_MouseLeftButtonDown">
                                        <Border Background="White" Height="23" Width="23">
                                            <TextBlock Text="+" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Margin="0,0,0,5"/>
                                        </Border>
                                    </Border>
                                </StackPanel>

                            </StackPanel>

                            <Border x:Name="RedDone" Background="Black" Height="27" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0" MouseLeftButtonDown="RedDone_MouseLeftButtonDown">
                                <TextBlock Background="White" Text="Готово" Margin="1,1,1,1" FontFamily="Cascadia Code ExtraLight" FontSize="22"/>
                            </Border>
                            <Border Width="100" HorizontalAlignment="Right"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>

                <StackPanel Name="SeeGrid" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-500,0,0" Opacity="0">
                    <TextBlock x:Name="InfoSee" Text="Здесь пока ничего"  FontFamily="Cascadia Code ExtraLight" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,-15,0,0"/>
                </StackPanel>

                <Grid x:Name="ImprGrid" Margin="0,-500,0,0" Opacity="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Border x:Name="Impr" Background="Black" Height="35" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,50,0,0" MouseLeftButtonDown="ImprGrid_MouseLeftButtonDown">
                        <TextBlock Background="White" Text="Импорт" FontFamily="Cascadia Code ExtraLight" FontSize="22" Margin="1,1,1,1" TextAlignment="Center"/>
                    </Border>
                    <Border x:Name="Expr" Background="Black" Height="35" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,100,0,0" MouseLeftButtonDown="Expr_MouseLeftButtonDown">
                        <TextBlock Background="White" Text="Экспорт" FontFamily="Cascadia Code ExtraLight" FontSize="22" Margin="1,1,1,1" TextAlignment="Center"/>
                    </Border>
                </Grid>
                

                <Border Width="200" HorizontalAlignment="Right"/>
            </Grid>
        </ScrollViewer>

        <Border Name="SeeAll" Background="Black" HorizontalAlignment="Right" Width="12" MouseLeftButtonDown="SeeAll_MouseLeftButtonDown" MouseEnter="SeeAll_MouseEnter" MouseLeave="SeeAll_MouseLeave">
            <Border Background="DimGray" Height="15" Width="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <TextBlock x:Name="NuhUh" Text="больше десяти нельзя" FontFamily="Comic Sans MS" FontSize="36" TextAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Right" Opacity="0" Margin="0,0,0,25" IsHitTestVisible="False">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="-26.565" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="Black" Offset="0.337"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <TextBlock x:Name="werg" HorizontalAlignment="Left"/>
    </Grid>
</Window>
